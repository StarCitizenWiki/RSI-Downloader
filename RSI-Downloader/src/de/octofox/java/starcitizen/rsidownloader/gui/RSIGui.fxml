<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.octofox.java.starcitizen.rsidownloader.gui.GUIController">
	
	<ToolBar prefHeight="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
		<Button fx:id="selectAllButton" onAction="#selectAll" text="Select all" />
		<Button fx:id="selectNoneButton" onAction="#selectNone" text="Select none" />
		<Pane HBox.hgrow="ALWAYS" />
		<Button fx:id="downloadButton" onAction="#downloadSelection" text="Download" />
	</ToolBar>
   <ListView fx:id="listView" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0" />
   <Label fx:id="statusLabel" prefHeight="40.0" style="-fx-label-padding: 0 0 0 5; -fx-border-color: #ddd; -fx-border-width: 1px 0 0 0; -fx-background-color: #eee;" text="Waiting..." textFill="#333333" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
   <TextField fx:id="searchInput" layoutX="14.0" layoutY="40.0" minHeight="30.0" promptText="Search..." AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0" />
</AnchorPane>
